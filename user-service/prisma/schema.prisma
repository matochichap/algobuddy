datasource db {
  provider = "mongodb"
  url      = env("USER_SERVICE_MONGODB_CONNECTION_STRING")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  google_id     String @unique
  displayName   String?
  firstName     String?
  lastName      String?
  picture       String?
  email         String?
  role          UserRole @default(USER)
  lastLogin     DateTime?
  createdAt     DateTime @default(now())
  lastUpdated   DateTime @updatedAt
}
